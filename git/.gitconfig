[core]
    attributesFile = ~/.gitattributes
[diff "zip"]
    textconv = unzip -p
      binary = true
[diff "gz"]
    textconv = gzcat
      binary = true
[diff "bz2"]
    textconv = bzcat
      binary = true
[diff "xz"]
    textconv = xzcat
      binary = true
[diff "tar"]
    textconv = tar -O -xf
      binary = true
[diff "tar-bz2"]
    textconv = tar -O -xjf
      binary = true
[diff "tar-gz"]
    textconv = tar -O -xzf
      binary = true
[diff "tar-xz"]
    textconv = tar -O -xJf
      binary = true

[diff "odf"]
    textconv = odt2txt
[diff "pdf"]
    textconv = pdfinfo
[diff "bin"]
    textconv = hexdump -v -C

[push]
	default = simple
